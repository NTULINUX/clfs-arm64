#
# End of unpack sources
#

#
# Prepare sources (rename source directories, apply patches, etc)
#

prepare_sources ()
{
	printf "\\n\\tPreparing source directories...\\n"

	printf "\\tSwitching U-Boot to tag %s...\\n" "${UBOOT_GIT_TAG}"

	cd "${UBOOT_SRCDIR}" || \
	{
		printf "\\tError entering %s. Exiting.\\n" "${UBOOT_SRCDIR}" ; exit 1 ;
	}

	git checkout "${UBOOT_GIT_TAG}"

	printf "\\tAdjusting package source directories...\\n"

	if [[ -d "${BARF_SRCDIR}/${OPENRC_VER}" && ! -d "${OPENRC_SRCDIR}" ]] ; then
		mv -v "${BARF_SRCDIR}/${OPENRC_VER}" "${OPENRC_SRCDIR}" || \
	{
		printf "\\tError moving eudev sources to a more reasonable location. Exiting.\\n" ; exit 1 ;
	}
	fi

	if [[ -d "${BARF_SRCDIR}/v${EUDEV_VER}" && ! -d "${EUDEV_SRCDIR}" ]] ; then
		mv -v "${BARF_SRCDIR}/v${EUDEV_VER}" "${EUDEV_SRCDIR}" || \
	{
		printf "\\tError moving eudev sources to a more reasonable location. Exiting.\\n" ; exit 1 ;
	}
	fi

	if [[ -d "${BARF_SRCDIR}/v${FLEX_VER}" && ! -d "${FLEX_SRCDIR}" ]] ; then
		mv -v "${BARF_SRCDIR}/v${FLEX_VER}" "${FLEX_SRCDIR}" || \
	{
		printf "\\tError moving Flex sources to a more reasonable location. Exiting.\\n" ; exit 1 ;
	}
	fi

	if [[ -d "${BARF_SRCDIR}/v${LZ4_VER}" && ! -d "${FLEX_SRCDIR}" ]] ; then
		mv -v "${BARF_SRCDIR}/v${LZ4_VER}" "${FLEX_SRCDIR}" || \
	{
		printf "\\tError moving lz4 sources to a more reasonable location. Exiting.\\n" ; exit 1 ;
	}
	fi

	if [[ -f "${BARF_SRCDIR}/bash${BASH_VER_CUT}-012" && ! -d "${BARF_SRCDIR}/${BASH_SRCDIR}" ]] ; then
		mv -v "${BARF_SRCDIR}/bash-${BASH_VER}" "${BASH_SRCDIR}" || \
	{
		printf "\\tError moving Bash sources to a more reasonable location. Exiting.\\n" ; exit 1 ;
	}
	fi

	printf "\\tPatching Bash to %s.\\n" "${BASH_PATCHLEVEL}"

	if [[ -d "${BASH_SRCDIR}" ]] ; then
		cd "${BASH_SRCDIR}" || \
	{
		printf "\\tError entering %s. Exiting.\\n" "${BASH_SRCDIR}" ; exit 1 ;
	}

		patch -p1 < "${BARF_SRCDIR}/bash${BASH_VER_CUT}-001" || \
	{
		printf "\\tError applying Bash patch from %s.%s" \
		"${BARF_SRCDIR}/bash${BASH_VER_CUT}-001" "${REPORT_BUG_EXIT}" ; exit 1 ;
	}

		patch -p1 < "${BARF_SRCDIR}/bash${BASH_VER_CUT}-002" || \
	{
		printf "\\tError applying Bash patch from %s.%s" \
		"${BARF_SRCDIR}/bash${BASH_VER_CUT}-002" "${REPORT_BUG_EXIT}" ; exit 1 ;
	}

		patch -p1 < "${BARF_SRCDIR}/bash${BASH_VER_CUT}-003" || \
	{
		printf "\\tError applying Bash patch from %s.%s" \
		"${BARF_SRCDIR}/bash${BASH_VER_CUT}-003" "${REPORT_BUG_EXIT}" ; exit 1 ;
	}

		patch -p1 < "${BARF_SRCDIR}/bash${BASH_VER_CUT}-004" || \
	{
		printf "\\tError applying Bash patch from %s.%s" \
		"${BARF_SRCDIR}/bash${BASH_VER_CUT}-004" "${REPORT_BUG_EXIT}" ; exit 1 ;
	}

		patch -p1 < "${BARF_SRCDIR}/bash${BASH_VER_CUT}-005" || \
	{
		printf "\\tError applying Bash patch from %s.%s" \
		"${BARF_SRCDIR}/bash${BASH_VER_CUT}-005" "${REPORT_BUG_EXIT}" ; exit 1 ;
	}

		patch -p1 < "${BARF_SRCDIR}/bash${BASH_VER_CUT}-006" || \
	{
		printf "\\tError applying Bash patch from %s.%s" \
		"${BARF_SRCDIR}/bash${BASH_VER_CUT}-006" "${REPORT_BUG_EXIT}" ; exit 1 ;
	}

		patch -p1 < "${BARF_SRCDIR}/bash${BASH_VER_CUT}-007" || \
	{
		printf "\\tError applying Bash patch from %s.%s" \
		"${BARF_SRCDIR}/bash${BASH_VER_CUT}-007" "${REPORT_BUG_EXIT}" ; exit 1 ;
	}

		patch -p1 < "${BARF_SRCDIR}/bash${BASH_VER_CUT}-008" || \
	{
		printf "\\tError applying Bash patch from %s.%s" \
		"${BARF_SRCDIR}/bash${BASH_VER_CUT}-008" "${REPORT_BUG_EXIT}" ; exit 1 ;
	}

		patch -p1 < "${BARF_SRCDIR}/bash${BASH_VER_CUT}-009" || \
	{
		printf "\\tError applying Bash patch from %s.%s" \
		"${BARF_SRCDIR}/bash${BASH_VER_CUT}-009" "${REPORT_BUG_EXIT}" ; exit 1 ;
	}

		patch -p1 < "${BARF_SRCDIR}/bash${BASH_VER_CUT}-010" || \
	{
		printf "\\tError applying Bash patch from %s.%s" \
		"${BARF_SRCDIR}/bash${BASH_VER_CUT}-010" "${REPORT_BUG_EXIT}" ; exit 1 ;
	}

		patch -p1 < "${BARF_SRCDIR}/bash${BASH_VER_CUT}-011" || \
	{
		printf "\\tError applying Bash patch from %s.%s" \
		"${BARF_SRCDIR}/bash${BASH_VER_CUT}-011" "${REPORT_BUG_EXIT}" ; exit 1 ;
	}

		patch -p1 < "${BARF_SRCDIR}/bash${BASH_VER_CUT}-012" || \
	{
		printf "\\tError applying Bash patch from %s.%s" \
		"${BARF_SRCDIR}/bash${BASH_VER_CUT}-012" "${REPORT_BUG_EXIT}" ; exit 1 ;
	}
	else
		printf "\\tI forgot to close this if statement LOL\\n"
	fi
}

#
# End of prepare sources
#

